programa {
  funcao inicio() {
    real d1, d2, divisao
    
    escreva("--- 3. Divisão --- \n")
    escreva("Digite o dividendo: ")
    leia(d1)
    escreva("Digite o divisor (diferente de zero): ")
    leia(d2)
    
    divisao = d1 / d2
    escreva("\nA divisão de ", d1, " por ", d2, " é: ", divisao, "\n")
}
    
  }
}
